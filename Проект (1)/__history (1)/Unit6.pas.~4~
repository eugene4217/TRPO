procedure TForm6.Button2Click(Sender: TObject);
var c:integer;
function factorial(k:integer):integer; {Нахождение факториала числа}
begin
  if k=1 then factorial:=1
   else factorial:=k*factorial(k-1); {Peкурсия}
end;
Begin
 c:=StrToInt(Edit3.Text);
 Memo3.Lines.Add('Число перестановок:' + factorial(c)); {Вывод результата}

end;

