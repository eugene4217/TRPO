  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form6: TForm6;

implementation

{$R *.dfm}

function factorial(k: integer): Extended; {Нахождение факториала числа}
begin
  if k = 1 then result := 1 else result := k * factorial(k - 1);
end;

procedure TForm6.Button2Click(Sender: TObject);
var c: Integer;
begin
  if not TryStrToInt(Edit3.Text, c) then Exit;
  Memo3.Lines.Add(Format('Число перестановок для k =равно ', [c, factorial(c)]));
end;

end.
